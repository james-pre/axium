{
	"compilerOptions": {
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"lib": ["ESNext"],
		"moduleResolution": "NodeNext",
		"module": "NodeNext",
		"target": "ES2023",
		"strict": true,
		"resolveJsonModule": true,
		"declaration": true,
		"outDir": "dist",
		"paths": {
			"@axium/core": ["./core/*"],
			"@axium/client": ["./client/*"],
			"@axium/server": ["./server/*"]
		}
	}
}
