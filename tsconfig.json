{
	"compilerOptions": {
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		// DOM is for types only!
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"moduleResolution": "NodeNext",
		"module": "NodeNext",
		"target": "ES2023",
		"strict": true,
		"resolveJsonModule": true,
		"importJsonAsConst": true,
		"declaration": true,
		"typeRoots": ["./node_modules/@types", "./types"],
		"types": ["node", "commander"],
		"paths": {
			"@axium/core": ["./core/*"],
			"@axium/client": ["./client/*"],
			"@axium/server": ["./server/*"],
			"@axium/storage": ["./storage/*"],
			"@axium/tasks": ["./tasks/*"]
		},
		"skipLibCheck": true
	},
	"exclude": ["node_modules"],
	"files": [],
	"references": [
		{ "path": "./calendar" },
		{ "path": "./core" },
		{ "path": "./client" },
		{ "path": "./notes" },
		{ "path": "./server" },
		{ "path": "./storage" },
		{ "path": "./tasks" }
	]
}
