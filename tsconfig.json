{
	"compilerOptions": {
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		// DOM is for types only!
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"moduleResolution": "NodeNext",
		"module": "NodeNext",
		"target": "ES2023",
		"strict": true,
		"resolveJsonModule": true,
		"declaration": true,
		"outDir": "dist",
		"paths": {
			"@axium/core": ["./core/*"],
			"@axium/client": ["./client/*"],
			"@axium/server": ["./server/*"],
			"@axium/cas": ["./cas/*"],
			"@axium/shares": ["./shares/*"]
		}
	},
	"exclude": ["node_modules"],
	"files": [],
	"references": [{ "path": "./core" }, { "path": "./client" }, { "path": "./server" }, { "path": "./cas" }, { "path": "./shares" }]
}
